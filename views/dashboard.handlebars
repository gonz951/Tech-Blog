<div>
    {{#if posts.length}}
        {{#each posts as |post|}}
            <div>
                <h4>
                    <a href="/post/{{post.id}}/updatepost">{{post.name}}</a>
                </h4>
                <p>{{format_date post.date_created}}</p>
            </div>
        {{/each}}
    {{/if}}
    <a href="/newpost">New post</a>
</div>

<script src="./js/dashboard.js"></script>